{
    "python.envFile": "${workspaceFolder}/.env",
    "python.analysis.extraPaths": [        
        "${workspaceFolder}/python/lib/src",
        "${workspaceFolder}/python/lib/src/tests" 
    ],
    "python.testing.unittestArgs": [
        "-v", "-s", 
        "${workspaceFolder}/python/lib/src/tests",  // RÃ©pertoire contenant les tests
        "-p", "test_*.py"        // Pattern pour trouver les fichiers de test
    ],
    "python.testing.unittestEnabled": true,
    "python.testing.cwd": "python/lib/src",
    "python.autoComplete.extraPaths": [
        "${workspaceFolder}/python/lib/src"             // Ajoute le dossier src au PYTHONPATH
    ],
    "python-envs.pythonProjects": [
        {
            "path": "",
            "envManager": "ms-python.python:venv",
            "packageManager": "ms-python.python:pip"
        }
    ],
    "editor.defaultFormatter": "ms-python.black-formatter"
}