#!/sbin/openrc-run

name="psec-core-controller"
user="svc-psec-controller"

depend() {
    after mosquitto
}

start() {
    ebegin "Starting PSEC core controller"

    start-stop-daemon --start --make-pidfile --exec /usr/bin/python3 --pidfile /var/run/$name.pid --background --user "$user" -- /usr/lib/psec/bin/start-psec-core-controller.py

    eend $?
}

stop() {
    ebegin "Stopping PSEC core controller"

    kill -9 $(cat /var/run/$name.pid)

    eend $?
}