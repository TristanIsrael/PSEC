#!/bin/sh

echo
echo --------------------------------------------
echo -------      PSEC Installation       -------
echo ---        script post-install.sh        ---
echo --------------------------------------------
echo

. /etc/psec/constants.sh

/usr/lib/psec/bin/generate-pgp-keys.sh
/usr/lib/psec/bin/setup-alpine-repo.sh
/usr/lib/psec/bin/setup-xen-environment.sh

echo Create system User Domains

echo ... sys-usb
/usr/lib/psec/bin/create-domu.sh sys-usb 

rc-udpate add start-domains boot
rc-udpate add setup-pci boot
rc-update add attach-pci-devices boot
rc-update add xen-pci boot