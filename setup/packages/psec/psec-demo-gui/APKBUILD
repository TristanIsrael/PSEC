# Contributor:
# Maintainer: Tristan IsraÃ«l <tristan.israel@alefbet.net>
pkgname=psec-demo-gui
pkgver=1.0
pkgrel=1
pkgdesc="PSEC - Demonstration application GUI"
url="https://www.alefbet.net/"
arch="noarch"
license="MIT"
depends="psec-lib psec-gui-base python3 py3-pyside6 py3-psutil py3-humanize fontconfig freetype font-roboto"
makedepends="python3-dev py3-build py3-installer git"
builddir="$srcdir/$pkgname-$pkgver"
checkdepends=""
install="$pkgname.post-install"
subpackages=""
replaces=""
options="!check"  # no tests provided
gitbranch="main"
source="
$pkgname.zip::https://github.com/TristanIsrael/PSEC/archive/refs/heads/$gitbranch.zip
start-gui.initd
"

prepare() {
    mkdir -p "$builddir"
    echo "Uncompress source files"
    unzip $pkgname.zip -d "$builddir"    
}

build() {
    cd "$builddir/PSEC/python/demo"
    python3 -m build
}

package() {
    cd "$builddir/PSEC/python/demo/dist"
    mkdir -p "$pkgdir/usr/lib/psec"
    tar xvzf *.tar.gz -C "$pkgdir/usr/lib/psec"
    cd "$pkgdir/usr/lib/psec"
    ln -s "demo-$pkgver" demo

    install -D -m755 "$srcdir"/start-gui.initd "$pkgdir"/etc/init.d/start-gui
}
