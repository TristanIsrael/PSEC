# Contributor:
# Maintainer: Tristan IsraÃ«l <tristan.israel@alefbet.net>
pkgname=psec-diag-gui
pkgver=1.0
pkgrel=1
pkgdesc="PSEC - Diagnostic tool"
url="https://www.alefbet.net/"
arch="noarch"
license="MIT"
depends="psec-lib psec-gui-base python3 py3-pyside6 py3-psutil py3-humanize fontconfig freetype roboto-font"
makedepends="python3-dev py3-build py3-installer git"
builddir="$srcdir/$pkgname-$pkgver"
checkdepends=""
install="$pkgname.post-install"
subpackages=""
replaces=""
options="!check"  # no tests provided
psec_branch="1.0"
giturl="https://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@github.com/tibsys/psec"
gitbranch="move-to-mqtt"
source="start-gui.initd"

prepare() {
    mkdir -p "$builddir"
    cd "$builddir"
    if [ -z "$gitbranch" ]; then
        echo Using main branch
        git clone "$giturl" .    
    else
        echo Using branch "$gitbranch"
        git clone --branch "$gitbranch" "$giturl" .
    fi
}

build() {
    cd "$builddir/python/diag"
    python3 -m build
}

package() {
    cd "$builddir/python/diag/dist"
    mkdir -p "$pkgdir/usr/lib/psec"
    tar xvzf *.tar.gz -C "$pkgdir/usr/lib/psec"
    cd "$pkgdir/usr/lib/psec"
    ln -s "diag-$psec_branch" diag

    install -D -m755 "$srcdir"/start-gui.initd "$pkgdir"/etc/init.d/start-gui
}
