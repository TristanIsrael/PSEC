#!/sbin/openrc-run

name="start-gui"
command_background="yes"

depend() {    
    after syslog
}

start() {
    ebegin "Starting GUI"

    chmod +x /usr/lib/psec/diag/src/diag/start.sh
    mkdir -p /var/log/psec

    start-stop-daemon --start --make-pidfile --exec /usr/lib/psec/diag/src/diag/start.sh --pidfile /var/run/$name.pid --background    
}

stop() {
    ebegin "Stopping GUI"
    
    kill -9 $(cat /var/run/$name.pid)

    eend $?
}