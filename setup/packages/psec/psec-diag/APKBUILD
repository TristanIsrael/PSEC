# Contributor:
# Maintainer: Tristan IsraÃ«l <tristan.israel@alefbet.net>
pkgname=psec-diag
pkgver=1.0
pkgrel=1
pkgdesc="PSEC - Diagnostic tool"
url="https://www.alefbet.net/"
arch="noarch"
license="MIT"
depends="python3 psec"
makedepends="python3-dev py3-build py3-installer git"
builddir="$srcdir/$pkgname-$pkgver"
checkdepends=""
install=""
subpackages=""
replaces=""
options="!check"  # no tests provided
giturl="https://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@github.com/tibsys/psec"

prepare() {
    mkdir -p "$builddir"
    cd "$builddir"
    git clone "$giturl" .
}

build() {
    cd "$builddir/python/diag"
    python3 -m build
}

package() {
    cd "$builddir/python/diag/dist"
    mkdir -p $pkgdir/usr/local/psec
    tar xvzf *.tar.gz -C $pkgdir/usr/local/psec
    cd $pkgdir
    ln -s `find . -name "psec_diag*" -type d` psec-diag
}