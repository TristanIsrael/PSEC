# Contributor:
# Maintainer: Tristan IsraÃ«l <tristan.israel@alefbet.net>
pkgname=psec-diag
pkgver=1.1
pkgrel=0
pkgdesc="PSEC - Diagnostic tool"
url="https://www.alefbet.net/"
arch="noarch"
license="MIT"
depends="python3 py3-pyside6 py3-py-cpuinfo py3-psutil fontconfig freetype font-roboto"
makedepends="python3-dev py3-build py3-installer git"
builddir="$srcdir/$pkgname-$pkgver"
checkdepends=""
install="$pkgname.post-install"
subpackages=""
replaces=""
options="!check"  # no tests provided
gitbranch="main"
source="
$pkgname.zip::https://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@github.com/TristanIsrael/PSEC/archive/refs/heads/$gitbranch.zip
diag.initd
"

prepare() {
    mkdir -p "$builddir"
    echo "Uncompress source files"
    unzip $pkgname.zip -d "$builddir"    
}

build() {
    cd "$builddir/PSEC/python/diag"
    python3 -m build
}

package() {
    cd "$builddir/python/diag/dist"
    mkdir -p "$pkgdir/usr/lib/psec"
    tar xvzf *.tar.gz -C "$pkgdir/usr/lib/psec"
    cd "$pkgdir/usr/lib/psec"
    ln -s "diag-$pkgver" diag    

    install -D -m755 "$srcdir"/diag.initd "$pkgdir/etc/init.d/diag"
}
