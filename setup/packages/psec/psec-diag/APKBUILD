# Contributor:
# Maintainer: Tristan IsraÃ«l <tristan.israel@alefbet.net>
pkgname=psec-diag
pkgver=1.0
pkgrel=1
pkgdesc="PSEC - Diagnostic tool"
url="https://www.alefbet.net/"
arch="noarch"
license="MIT"
depends="python3 psec-lib"
makedepends="python3-dev py3-build py3-installer git"
builddir="$srcdir/$pkgname-$pkgver"
checkdepends=""
install=""
subpackages=""
replaces=""
psec_bindir="$pkgdir/usr/lib/psec"
options="!check"  # no tests provided
psec_branch="1.0"
giturl="https://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@github.com/tibsys/psec"

prepare() {
    mkdir -p "$builddir"
    cd "$builddir"
    git clone "$giturl" .
}

build() {
    cd "$builddir/python/diag"
    python3 -m build
}

package() {
    cd "$builddir/python/diag/dist"
    mkdir -p $pkgdir
    tar xvzf *.tar.gz -C $psec_bindir
    cd $psec_bindir
    ln -s "psec-$psec_branch" diag
}