# Contributor:
# Maintainer: Tristan Isra..l <tristan.israel@alefbet.net>
pkgname=psec-lib
pkgver=1.0
pkgrel=1
pkgdesc="PSEC - Python library"
url="https://www.alefbet.net/"
arch="noarch"
license="MIT"
depends="python3"
makedepends="python3-dev py3-build py3-installer git"
builddir="$srcdir/$pkgname-$pkgver"
checkdepends=""
install=""
subpackages=""
replaces=""
options="!check"  # no tests provided
giturl="https://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@github.com/tibsys/psec"

prepare() {
    mkdir -p "$builddir"
    cd "$builddir"
    git clone "$giturl" .
}

build() {
    cd "$builddir/python/lib"
    python3 -m build
}

package() {
    cd "$builddir/python/lib/dist"
    python3 -m installer --destdir=$pkgdir psec-*-py3-none-any.whl
}