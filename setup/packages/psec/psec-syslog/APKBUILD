# Contributor:
# Maintainer: Tristan IsraÃ«l <tristan.israel@alefbet.net>
pkgname=psec-syslog
pkgver=1.0
pkgrel=1
pkgdesc="PSEC - syslog facility for business Domains"
url="https://www.alefbet.net/"
arch="noarch"
license="MIT"
depends="rsyslog rsyslog-uxsock psec-lib"
makedepends=""
builddir="$srcdir/$pkgname-$pkgver"
checkdepends=""
install="$pkgname.post-install"
subpackages=""
replaces=""
options="!check"  # no tests provided
source="
psec-syslog.conf
psec-logger-daemon.py
psec-logger-daemon.initd
"

package() {    
    install -D -m755 "$srcdir"/psec-logger-daemon.initd "$pkgdir"/etc/init.d/psec-logger-daemon

    install -D -m755 "$srcdir"/psec-syslog.conf "$pkgdir"/etc/rsyslog.d/psec.conf
    install -D -m755 "$srcdir"/psec-logger-daemon.py "$pkgdir"/usr/lib/psec/bin/psec-logger-daemon.py
}
