#!/sbin/openrc-run

name="create-mqtt-tunnels"
logfile="/var/log/safecor/mqtt-tunnels.log"
user="svc-mqtt-tunnels"

depend() {
    after start-domains
}

start() {
    ebegin "Create MQTT tunnels"

    if grep -q "DEBUG=ON" "/proc/cmdline"; then
        rm -f $logfile
        start-stop-daemon --start --make-pidfile --exec /usr/bin/python3 --pidfile /var/run/$name.pid --background --stdout $logfile --stderr $logfile --user $user -- -u /usr/lib/safecor/bin/create-mqtt-tunnels.py
    else 
        start-stop-daemon --start --make-pidfile --exec /usr/bin/python3 --pidfile /var/run/$name.pid --background --user $user -- /usr/lib/safecor/bin/create-mqtt-tunnels.py
    fi

    eend $?
}

stop() {
    ebegin "Destroy MQTT tunnels"

    kill -9 $(cat /var/run/$name.pid)

    eend $?
}